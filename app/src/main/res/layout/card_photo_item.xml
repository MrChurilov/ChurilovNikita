<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/Margin_Small"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <ImageView

            android:id="@+id/img_photo"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/img_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_photo"
            android:layout_marginLeft="@dimen/Margin_Big"
            android:layout_marginStart="@dimen/Margin_Big"
            android:layout_marginTop="@dimen/Margin_Medium"
            android:background="@drawable/ic_insert_emoticon_black_24dp"
            />

        <TextView
            android:id="@+id/txt_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_like"
            android:layout_alignTop="@+id/img_like"
            android:layout_marginLeft="@dimen/Margin_Medium"
            android:layout_toEndOf="@+id/img_like"
            android:layout_toRightOf="@+id/img_like"
            android:gravity="center_vertical"
            android:textSize="@dimen/TextSize"/>

        <TextView
            android:id="@+id/txt_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_likes"
            android:layout_marginLeft="@dimen/Margin_Big"
            android:layout_marginTop="@dimen/Margin_Small"
            android:textSize="@dimen/TextSize"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>